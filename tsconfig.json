{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ESNext"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@shared-utils/*": ["packages/shared-utils/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["apps/**/*", "packages/**/*"]
}
